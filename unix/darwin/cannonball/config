# -*- sh -*-

eval "$(rbfu --init --auto)"

export ACCEPT="application/json"
export X_CANDY_PLATFORM="desktop"
export X_CANDY_AUDIENCE="international" # or "domestic"

alias apicurl="curl -s -E $HOME/.ssh/bbc/certificate.pem -H 'Accept: $ACCEPT' -H 'X-Candy-Platform: $X_CANDY_PLATFORM' -H 'X-Candy-Audience: $X_CANDY_AUDIENCE'"

# Without cat, get python stack trace if you abort pipe
alias jsonlint="python -mjson.tool | cat"
