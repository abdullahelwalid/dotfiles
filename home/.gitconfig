# Documented in git-config(1).

[user]
	name = Michael Stillwell
	email = mjs@beebo.org

[core]
	excludesfile = ~/.gitignore

[diff]
    mnemonicprefix = true

[alias]
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    vlog = log --name-status
    type = cat-file -t
    dump = cat-file -p
    unstage = reset HEAD --

[bash]
    # If GIT_PS1_SHOWDIRTYSTATE is set and bash.showDirtyState is 1,
    # display dirty state indicator.  (Defaulting to on; disable 
    # in .git/config on very large repositories.)
    showDirtyState = 1

# If you need it, get github.user and github.token from
#
#   https://github.com/account#git_config
#
# You may also be able to set the environment variables
# GITHUB_USER and/or GITHUB_TOKEN.  (Don't it paste here!)
[advice]
	pushNonFastForward = false
	statusHints = false
