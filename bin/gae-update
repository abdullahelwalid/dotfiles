#!/usr/bin/env bash

if [ ! -f app.yaml ]; then
  echo "error: no app.yaml found (create one with gae-init)"
  exit 1
fi

if [ ! $(which appcfg.py) ]; then
  echo "error: appcfg.py not found (get the Google Appe Engine SDK for Python)"
  exit 1
fi

# https://console.developers.google.com/project/second-impact
appcfg.py --oauth2 -A second-impact update .
