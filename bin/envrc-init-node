#!/usr/bin/env bash

VERSION=${1:-7.2.0}

if [ ! -e ".envrc" ]; then
  echo "$(basename $0): creating .envrc"
  touch .envrc
else
  echo "$(basename $0): updating .envrc"
fi

grep "use node" .envrc > /dev/null || echo "use node $VERSION" >> .envrc
grep "layout node" .envrc > /dev/null || echo "layout node" >> .envrc

direnv allow
