#!/usr/bin/env bash

cat << APP_YAML_END > app.yaml
application: helloworld
version: 1
runtime: php55
api_version: 1

default_expiration: 1s

handlers:
- url: /$
  static_files: index.html
  upload: index.html

- url: /(.+)/
  static_files: \1/index.html
  upload: .*/index.html

- url: /(.*)
  static_files: \1
  upload: .*
APP_YAML_END

cat << ROBOTS_TXT_END > robots.txt
User-agent: *
Disallow: /
ROBOTS_TXT_END
