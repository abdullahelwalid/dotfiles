#!/usr/bin/env bash

git init --template=$HOME/.dotfiles/templates-gerrit

git config user.name "Michael Stillwell"
git config user.email "stillers@google.com"
git config alias.push-gerrit "push origin HEAD:refs/for/master"

# Performance optimization; requires VPN. See
# https://gerrit-internal.git.corp.google.com/docs/+/master/users/url-persistent-https.md
#git config url."persistent-https://devrel-review.git.corp.google.com".insteadOf https://devrel-review.git.corp.google.com
