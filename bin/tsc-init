#!/usr/bin/env bash

TSCONFIG_JSON="tsconfig.json"

if [ -f $TSCONFIG_JSON ]; then
  echo "error: $TSCONFIG_JSON already exists, aborting"
  exit 1
fi

if [ ! $(which tsc) ]; then
  echo "error: tsc is not installed (see https://www.typescriptlang.org/#download-links)"
  exit 1
fi  

cat << TSCONFIG_JSON_END > $TSCONFIG_JSON
{
  // https://www.typescriptlang.org/docs/handbook/compiler-options.html
  "compilerOptions": {
    // Uses require() for module loading, are required by node
    "module": "commonjs",
    "target": "es6",
    // Makes 'import cheerio from "cheerio"' work (instead of 'const cheerio = require("cheerio")')
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "sourceMap": false,
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules"
  ]
}
TSCONFIG_JSON_END
