#!/usr/bin/env bash

if [ -f tsconfig.json ]; then
  echo "error: tsconfig.json already exists, aborting"
  exit 1
fi

if [ ! $(which tsc) ]; then
  echo "error: tsc is not installed (see https://www.typescriptlang.org/#download-links)"
  exit 1
fi  

cat << TSCONFIG_JSON_END > tsconfig.json
{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "sourceMap": false,
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "typings"
  ]
}
TSCONFIG_JSON_END
