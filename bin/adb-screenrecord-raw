#!/usr/bin/env bash

# For devices that don't have any codecs for video recording, such as Wear

require() { hash "$@" || exit 127; }

require adb
require ffmpeg

filename="$1"

if [ -z "$filename" ]; then
  filename=$(date -u +'adb-screenrecord-%Y%m%d%H%M%S.mp4')
fi

function stop {
  # Wait a moment for the movie to be written
  sleep 3
  adb shell -n settings put system show_touches 0
  adb shell -n cat /sdcard/screenrecord.raw | ffmpeg -f rawvideo -vcodec rawvideo -s 454x454 -pix_fmt rgb24 -i - -an -c:v libx264 -pix_fmt yuv420p "$filename"
  adb shell -n rm /sdcard/screenrecord.raw
  echo "Saved to $filename"
}

trap stop SIGINT

adb shell -n settings put system show_touches 1

echo "Recording... (Press Ctrl-C to stop)"
adb shell screenrecord --output-format=raw-frames --size 454x454 --bit-rate 70M --verbose /sdcard/screenrecord.raw
